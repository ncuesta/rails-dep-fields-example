<h1>Orders</h1>

<p>
  <%= link_to 'New Order', new_order_path -%>
</p>

<table>
  <thead>
    <tr>
      <th>
        Client name
      </th>
      <th>
        Ordered at
      </th>
      <th>
        Dish
      </th>
    </tr>
  </thead>
  <tbody>
    <%- @orders.each do |order| -%>
      <tr>
        <td>
          <%= order.name -%>
        </td>
        <td>
          <%= l order.created_at -%>
        </td>
        <td>
          <%= order.dish -%>
        </td>
      </tr>
    <%- end -%>
  </tbody>
</table>
